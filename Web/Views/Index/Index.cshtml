@using PagedList.Mvc;  
@{  
        ViewBag.Title = "E-Training";  
}  
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>E-Training System - Login</title>
    <link rel="stylesheet" type="text/css" href="/Content/E_Training/css/login.css" />
    <link rel="stylesheet" type="text/css" href="/Content/E_Training/css/loginIconfont.css"/>
    <script type="text/javascript" src="/Content/E_Training/js/jquery/jquery.min.js" ></script>
	<script type="text/javascript" src="/Content/E_Training/js/blurjs/blurjs.js" ></script>
    <script type="text/javascript">
        $(function () {
            setBgImg();
            $(".favourite").click(function () {
                try {
                    window.external.AddFavorite(location.href, document.title);
                    $(this).addClass("favourite");
                } catch (e) {
                    try {
                        window.sidebar.addPanel(location.href, document.title, '');
                        $(this).addClass("favourite");
                    } catch (e) {
                        alert($(this).data("msg"));
                    }
                }
            });

            $(".wrapper > input").each(function () {
                var label = $($(this).parent()).find("label");
                $(this).focus(function () {
                    label.addClass("actived");
                });
                $(this).blur(function () {
                    label.removeClass("actived");
                });
            });
        });

        /*function setBgImg(){
