@model CRM_System.Model.Sys_Admin
@{
    ViewBag.Title = "后台用户管理";
}

<script src="/Areas/Admin/Script/Sys_Admin/Edit.js?@(new Random().Next(10000))"></script> 
<div class="col-md-6" style=" margin-top:15px;">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title" title="后台用户管理">后台用户管理</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form" id="Subinfo">
            <input type="hidden" id="ID" name="ID" value="@(ViewBag.ID)" />
            <div class="box-body">
                <div class="form-group">
                    <label for="exampleInputEmail1" title="账户名">账户名</label>

                    <input type="text" class="form-control" id="UName" name="UName" placeholder="Enter..." value="@(Model.UName)" @(ViewBag.ID == 0 ? "" : "readonly=readonly") />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1" title="真实姓名">真实姓名</label>
                    <input type="text" class="form-control" id="TrueName" name="TrueName" placeholder="Enter..." value="@(Model.TrueName)" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1" title="密码">设置密码</label>
                    <input type="password" class="form-control" id="LoginPwd" name="LoginPwd" placeholder="@(ViewBag.ID==0?"Enter...":"不填则为不修改")" />
                </div>

              

                <div class="form-group">
                    <label for="exampleInputEmail1" title="角色">角色</label>
                    <select id="RoleID" name="RoleID" class="form-control" style=" width:30%;">
                        <option value="0">请选择</option>
                        @foreach (var typemod in new CRM_System.BLL.Sys_RoleService().FindAll())
                        {
                            if (typemod.ID != 1)
                            {
                                if (typemod.ID == Model.RoleID)
                                {
                                    <option value="@(typemod.ID)" selected="selected">@(typemod.ROLENAME)</option>
                                }
                                else
                                {
                                    <option value="@(typemod.ID)">@(typemod.ROLENAME)</option>
                                }
                            }
                        }
                    </select>
                    <input type="hidden" id="RoleName" name="RoleName" value="" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1" title="电话">联系电话</label>
                    <input type="text" class="form-control" id="Phone" name="Phone" placeholder="Enter..." value="@(Model.Phone)" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1" title="电子邮箱">电子邮箱</label>
                    <input type="text" class="form-control" id="Email" name="Email" placeholder="Enter..." value="@(Model.Email)" />
                </div>


                <div class="form-group">
                    <label for="exampleInputEmail1" title="是否禁止登陆">是否禁止登陆</label>
                    <select id="IsLock" name="IsLock" class="form-control" style=" width:30%;">
                        <option value="0">否</option>
                        <option value="1">是</option>
                    </select>
                </div>

            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="button" class="btn btn-primary" id="EditBtn">保存</button>
            </div>
        </form>
    </div><!-- /.box -->
</div><!--/.col (left) -->