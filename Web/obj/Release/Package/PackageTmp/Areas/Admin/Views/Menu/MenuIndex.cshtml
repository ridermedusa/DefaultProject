@{
    ViewBag.Title = "MenuIndex";
}

  <script src="/Areas/Admin/Script/Menu/MenuIndex_Edit.js?@(new Random().Next(10000))"></script>
 <div class="col-md-6" style=" margin-top:15px;">
                            <!-- general form elements -->
                            <div class="box box-primary">
                                <div class="box-header">
                                    <h3 class="box-title" title="菜单栏">Web site maintenance</h3>
                                </div><!-- /.box-header -->
                                <!-- form start -->
                                <form role="form" id="Subinfo">
                                    <input type="hidden" id="ID" name="ID"  value="@(ViewBag.ID)" />
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Name</label>
                                            <input type="text" class="form-control" id="RightName" name="RightName"  placeholder="Enter..." />
                                        </div>

                                        <!----<div class="form-group">
                                            <label for="exampleInputEmail1">English name</label>
                                            <input type="text" class="form-control" id="Ename" name="Ename"  placeholder="Enter..." />
                                        </div>-->
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Address</label>
                                            <input type="text" class="form-control" id="RightUrl" name="RightUrl"  placeholder="Enter..." />
                                        </div>
                                        <div class="form-group">
                                            <label >Superior node:</label>
                                            <div style=" width:100%;"></div>
                                            <select id="RightParent" name="RightParent">
                                                <option value="0">root node</option>
                                                @foreach (var item in new CRM_System.BLL.Mpr_Admin_MenuService().FindAll())
                                                {
                                                     <option value="@(item.ID)">@(item.RightName)</option>  
                                                }
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">是否存在权限按钮</label>
                                             <div style=" width:100%;"></div>
                                             <input type="radio"  name="IsButton" value="0" /> 否
                                            <input type="radio"  name="IsButton" value="1" /> 是
                                        </div>

                                         <div class="form-group">
                                            <label for="exampleInputEmail1">按钮权限</label>
                                             <div style=" width:100%;"></div>
                                             <table>
                                                 <thead>
                                                  <tr>
                                                     <td  style=" padding-left:8px;">
                                                      权限类型：
                                                          <input type="radio"  name="Roletype" value="0"  checked="checked"/> 按钮
                                                          <input type="radio"  name="Roletype" value="1" /> 事件  
                                                    </td>
                                                    <td  style=" padding-left:8px;">
                                                      操作名： <input type="text"  id="addOperation"/>
                                                    </td>
                                                    <td  style=" padding-left:8px;">
                                                      控制钮name: <input type="text" id="addButtonName"/>
                                                    </td>
                                                      <td  style=" padding-left:8px;">
                                                      <input type="button" id="addbtn" name="addbtn" value="添加" />
                                                    </td>
                                                 </tr>
                                                 </thead>
                                                  <tbody id="BtnRoleBody">


                                                  </tbody>
                                             </table>
                                        </div>
                                    </div><!-- /.box-body -->

                                    <div class="box-footer">
                                        <button type="button" class="btn btn-primary" id="EditBtn">Submit</button>
                                    </div>
                                </form>
                            </div><!-- /.box -->


                        </div><!--/.col (left) -->
