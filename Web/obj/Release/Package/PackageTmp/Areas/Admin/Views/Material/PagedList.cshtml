@model  PagedList.IPagedList<CRM_System.Model.Mpr_Material>
@using PagedList.Mvc;
@{
        ViewBag.Title = "PagedList";
    }

<!-- Content Header (Page header) -->
<script src="~/Areas/Admin/Script/Material/Index.js?@(new Random().Next(1011))"></script>


<div id="page" class="con_right">
    <div class="con_right0">
        <div class="con_right1 pull-left">
            <span class="pull-left"><img src="/Content/CRM_System/images/ico1.jpg"></span>
            <h3 class="pull-left">素材列表</h3>
        </div>
        <div class="con_right2 pull-right">
            <ol class="breadcrumb">
                <li><a href="javascript:parent.location.href='/'">Home</a></li>
                <li><a href="javascript:void(0);">素材库</a></li>
                <li class="active"><a href="/admin/Material">素材列表</a></li>
            </ol>
        </div>
        <div class="clearfix"></div>
    </div>

    <div class="ser">
        <div class="form-inline">

            @using (Html.BeginForm("PagedList", "Material", FormMethod.Get))
            {
                <div class="input-group">
                    <input type="text" class="form-control input-sm" style="width: 150px;" placeholder="分类名称" name="Key" id="Key" />
                    <button type="submit" class="btn btn-default" id="Serchbtn" name="roleser" style="margin-left:15px;" value="搜索">搜索</button>
                    <button type="button" class="btn btn-default" id="roleadd" name="roleadd" style="margin-left:15px;" value="添加">添加</button>
                </div>
            }


        </div>
    </div>

    <div class="con_right3">
        <table class="table table-hover table-bordered table-responsive" id="table">
            <thead>
                <tr class="info first">
                    <th style="text-align:center; vertical-align:middle;" title="操作">操作</th>
                    <th style="text-align:center; vertical-align:middle;" title="类型">类型</th>
                    <th style="text-align:center; vertical-align:middle;" title="标题">标题</th>
                    <th style="text-align:center; vertical-align:middle;" title="描述">描述</th>
                    <th style="text-align:center; vertical-align:middle;" title="添加时间">添加时间</th>
                </tr>
            </thead>
            <tbody style="text-align: center" id="GetBody">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="javascript:void(0);" name="roleedit" clt="@(item.ID)"><span class="glyphicon glyphicon-edit">编辑</span></a>
                            <a href="javascript:void(0);" name="roledel" clt="@(item.ID)"><span class="glyphicon glyphicon-trash">删除</span></a>
                        </td>
                        <td>@(item.TypeName)</td>
                        <td>@(item.Title)</td>
                        <td>@(item.Des)</td>
                        <td>@(item.AddTime)</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!--分页开始-->

    <div class="OptionPagerList" style="text-align:center;">
        @Html.PagedListPager(Model, page => Url.Action("PagedList", new { page }))
    </div>
</div>