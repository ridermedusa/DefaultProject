@model CRM_System.Model.Mpr_Material_Type
@{
    ViewBag.Title = "素材库参数";
}
<script src="~/Areas/Admin/Script/MaterialType/Edit.js?@(new Random().Next(10000))"></script>
<div class="col-md-12" style="margin-top:15px;">
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title" title="">素材库参数</h3>
        </div>
        <div class="box-body" style="padding-top:10px;">
            <div class="form-group">
                <label for="exampleInputEmail1" title="类型名称">类型名称:</label>
                <input type="text" class="form-control" style="width:50%;" id="TypeName" name="TypeName" placeholder="Enter..."  value="@(Model.TypeName)" />
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1" title="排序编号">排序编号:</label>
                <input type="number" class="form-control" style="width:50%;" id="Sort" name="Sort" placeholder="Enter..." value="@(Model.Sort)"  />
            </div>
        </div>
        <div class="box-footer">
            <input type="hidden" id="ID" name="ID" value="@(Model.ID)" />
            <button type="button" class="btn btn-primary" id="EditBtn">保存</button>
        </div>
    </div>
</div>
