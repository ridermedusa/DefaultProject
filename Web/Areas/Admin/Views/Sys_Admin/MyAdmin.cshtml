@model CRM_System.Model.Sys_Admin
@{
    ViewBag.Title = "后台用户管理";
}

   <script src="/Areas/Admin/Script/Sys_Admin/MyAdmin.js?@(new Random().Next(10000))"></script>
<script src="~/Scripts/Skill.js"></script>
  <div class="col-md-6" style=" margin-top:15px;  width:100%;">
                            <!-- general form elements -->
                            <div class="box box-primary">
                                <div class="box-header">
                                    <h3 class="box-title" title="后台用户管理">后台用户管理</h3>
                                </div><!-- /.box-header -->
                                <!-- form start -->
                                <form role="form" id="Subinfo">
                                <input type="hidden" id="ID" name="ID" value="@(ViewBag.ID)" />
                                    <div class="box-body">
                                          <div class="form-group">
                                            <label for="exampleInputEmail1" title="账户名">账户名:</label><br />
                                            @(Model.UName)
                                        </div>
                                        <div class="form-group">                                                                                   
                                            <label for="exampleInputEmail1" title="真实姓名">真实姓名</label>
                                            <input type="text" class="form-control" id="TrueName" name="TrueName"  placeholder="Enter..." value="@(Model.TrueName)"  style=" width:50%;"/>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1" title="密码">设置密码</label>
                                            <input type="password" class="form-control" id="LoginPwd" name="LoginPwd"  placeholder="@(ViewBag.ID==0?"Enter...":"不填则为不修改")" style=" width:50%;" />
                                        </div>
                                            <div class="form-group">
                                            <label for="exampleInputEmail1" title="角色">角色</label><br />
                                            @(Model.RoleName)
                                       </div>                       
                                          <div class="form-group">
                                            <label for="exampleInputEmail1" title="电话">联系电话</label>
                                            <input type="text" class="form-control" id="Phone" name="Phone"  placeholder="Enter..." value="@(Model.Phone)" style=" width:50%;"/>
                                        </div>
                                             <div class="form-group">
                                            <label for="exampleInputEmail1" title="电子邮箱">电子邮箱</label>
                                            <input type="text" class="form-control" id="Email" name="Email"  placeholder="Enter..." value="@(Model.Email)" style=" width:50%;"/>
                                        </div>
                                    </div>
                                    <!-- /.box-body -->
                                    <div class="box-footer">
                                        <button type="button" class="btn btn-primary" id="EditBtn">保存</button>
                                    </div>
                                </form>
                            </div><!-- /.box -->
                        </div><!--/.col (left) -->