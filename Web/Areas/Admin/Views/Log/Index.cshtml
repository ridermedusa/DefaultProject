@model PagedList.IPagedList<CRM_System.Model.Sys_Error_log> 
@using PagedList.Mvc;  
@{
    ViewBag.Title = "基础设置配置";
}
 <!-- Content Header (Page header) -->
<script src="~/Areas/Admin/Script/HitConfig/Index.js"></script>
        <div class="row">
                        <div class="col-xs-12">
                            <div class="box">
                                <div class="box-header">
                                    <h3 class="box-title"></h3>
                                    <div class="box-tools">
                                        <div class="input-group">
                                            名称： <input type="text" name="table_search" class="form-control input-sm" style="width: 150px;" placeholder="Search" name="keyword" id="keyword"/>
                                            <input type="button" class ="btn btn-sm" id="Serchbtn" name="roleser" style=" margin-left:15px;" value="Search" /> 
                                            <!---<input type="button" class ="btn btn-sm" name="roleadd" style=" margin-left:15px;" value="Add to" /> -->
                                           </div>
                                        </div>
                                    </div>
                                </div><!-- /.box-header -->
                                <div class="box-body table-responsive no-padding">
                                    <table class="table table-hover">
                                           <thead >
                                        <tr>  
                                               <th style="text-align:center; width:10%;" title="时间">时间</th>
                                               <th style="text-align:center;width:10%;" title="标题">标题</th>   
                                               <th style="text-align:center;" title="详情">详情</th>
                                        </tr>
                                         </thead>
                                       <tbody style="text-align: center" id="GetBody">
                                           @foreach(var item in Model)
                                           {
                                             <tr>
                                                <td style="font-size:10px;">
                                                    @(item.Date)
                                                  </td>
                                                 <td style="font-size:10px;"> @(item.ErrType)</td>
                                                 <td style="font-size:10px;">@(item.ErrMsg)</td>
                                              </tr>     
                                           }
                                         </tbody>
                                    </table>
                                </div>
                                  <div class="OptionPagerList">@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))  </div> 
                                 <!-- /.box-body -->
                            </div><!-- /.box -->
            </div>                                                                           
